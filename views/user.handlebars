<div class='p-3 m-auto max-w-screen-lg'>
  <div
    class='relative flex justify-between px-5 py-3 m-auto rounded-md border-2 border-dark-200/60 bg-dark-200/40 backdrop-blur-lg'
  >
    <div class='flex items-start justify-center drop-shadow-sm'>
      <a href='/users/{{userData.username}}'>
        <img
          class='w-20 h-20 rounded-full'
          src='{{userData.avatar}}'
          alt="{{userData.username}}'s Avatar"
        />
      </a>
      <div>
        <p
          class='text-lg font-medium text-secondary-disabled'
        >{{userData.first_name}} {{userData.last_name}}</p>
        <small
          class='text-xs font-normal text-secondary-hover/80'
        >@{{userData.username}}</small>
      </div>
    </div>
    <div
      class='absolute flex justify-center items-center gap-3 pb-3 -bottom-1 left-1/2 text-secondary-hover -translate-x-1/2'
    >
      <p><i class='text-sm fa-solid fa-envelopes-bulk'></i>
        {{userData.posts.length}}</p>
      <p><i class='text-sm fa-solid fa-heart'></i> {{userLikes}}</p>
    </div>


  </div>
  <div class='px-8 py-1.5'>
    <h3 class='text-lg font-semibold text-secondary-disabled'>About Me</h3>
    <p>{{userData.about}}</p>
    <hr class='h-1 my-8 bg-secondary-disabled border dark:bg-gray-700' />
  </div>
</div>
<div>
  <h2 class='text-5xl mb-5 text-center font-bold font-sans'>{{userData.first_name}}&apos;s Posts</h2>
  <ul class='flex flex-col gap-8'>
    <dialog class='rounded-md shadow-lg' id='post-delete-dialog'>
      <p>Are you sure you want to delete this Post.
        <br />
        <small class='text-xs text-gray-500'>This action cannot be undone.</small>
      </p>
      <div class='flex justify-end gap-2 mt-5'>
        <button
          class='bg-secondary-main rounded-md hover:bg-secondary-hover text-white block w-full px-4 py-2 text-left text-sm'
          id='cancel-delete-post-button'
        >Cancel</button>
        <button
          id='confirm-delete-post-button'
          class='bg-danger-main rounded-md hover:bg-danger-hover text-white block w-full px-4 py-2 text-left text-sm'
        >Delete</button>
      </div>
    </dialog>
    {{#each userData.posts}}
      <li>
        {{> post}}
      </li>
    {{/each}}
  </ul>
  <script src='/js/postPage.js'></script>
</div>