<form
  id='post-form'
  class='mt-10 grid grid-cols-1 gap-x-6 gap-y-8 sm:grid-cols-6'
>

  <div class='sm:col-span-4'>
    <label
      for='title'
      class='block underline decoration-4 mb-3 decoration-slate-950/80 text-4xl ml-5 font-medium leading-6 text-gray-900'
    >Title</label>
    <div class='mt-2'>
      <div
        class='flex rounded-md shadow-sm ring-1 ring-inset ring-gray-300 focus-within:ring-2 focus-within:ring-inset focus-within:ring-indigo-600 sm:max-w-md'
      >
        <input
          type='text'
          name='title'
          id='title'
          autocomplete='title'
          class='block flex-1 border-0 text-3xl bg-transparent py-1.5 pl-3 text-gray-900 placeholder:text-gray-400 focus:ring-0'
          placeholder='Title'
        />
      </div>
    </div>
  </div>

  <div class='col-span-full'>
    <label
      for='body'
      class='block text-2xl ml-5 font-medium leading-6 text-gray-900'
    >Body</label>
    <div class='mt-2'>
      <textarea
        id='body'
        name='body'
        rows='15'
        class='block w-full rounded-md border-0 py-1.5 px-3 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6'
      ></textarea>
    </div>
  </div>
  <div class='col-span-full flex justify-end items-center gap-5'>
    <a
      class='flex items-center justify-center text-2xl font-semibold text-white bg-secondary-main rounded px-2 py-1 hover:bg-secondary-hover hover:drop-shadow'
      href='/dashboard'
    >Cancel</a>
    <button
      id='post-button'
      class='flex items-center justify-center text-2xl font-semibold text-white bg-primary-main rounded px-2 py-1 hover:bg-primary-hover hover:drop-shadow'
    >
      Post
    </button>
  </div>
</form>
<dialog class='rounded-lg shadow-lg max-w-xl' id='confirmation-dialog'>
  <p class='font-semibold text-lg'>This Will post this to the database and it
    will be public to everyone are your sure?</p>
  <div class='flex justify-end gap-5 mt-5'>

    <button
      id='confirmation-cancel-button'
      class='flex items-center justify-center text-xl font-semibold text-white bg-secondary-main rounded px-2 py-1 hover:bg-secondary-hover hover:drop-shadow'
    >Cancel</button>
    <button
      id='confirmation-button'
      class='flex items-center justify-center text-xl font-semibold text-white bg-success-main rounded px-2 py-1 hover:bg-success-hover hover:drop-shadow'
    >Yes I'm Sure.</button>
  </div>
</dialog>
<dialog id='warning-dialog'>
  <div>
    <p>Something went wrong are all the fields filled in?</p>
    <button
      class='flex items-center justify-center text-2xl font-semibold text-white bg-secondary-main rounded px-2 py-1 hover:bg-secondary-hover hover:drop-shadow'
    >Cancel</button>
  </div>
</dialog>
<script src='/js/new-post.js'></script>