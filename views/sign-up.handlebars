<main
  class='relative flex min-h-full flex-col justify-center px-6 py-12 lg:px-8 space-y-5'
>
  <div class='sm:mx-auto sm:w-full sm:max-w-sm'>
    <img
      class='mx-auto h-10 w-auto'
      src='https://tailwindui.com/img/logos/mark.svg?color=indigo&shade=600'
      alt='Your Company'
    />
    <h2
      class='mt-8 mb-8 text-center text-2xl font-bold leading-9 tracking-tight text-gray-900'
    >Sign Up for an account</h2>
    <p
      id='api-response'
      class='text-center text-lg text-danger-main font-semibold'
    >&ThickSpace;</p>
  </div>
  <form class='max-w-lg sm:max-w-sm mx-auto w-full space-y-6' id='sign-up-form'>
    <div>
      <div class='flex items-center justify-start'>
        <label
          for='first-name'
          class='block text-base font-medium leading-6 text-gray-900'
        >&ThickSpace;First Name</label>
      </div>
      <div class='mt-2'>
        <input
          id='first-name'
          name='first-name'
          type='first-name'
          autocomplete='first-name'
          class='block w-full rounded-md border-0 py-1.5 px-3 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-info-main sm:text-sm sm:leading-6'
        />
      </div>
    </div>
    <div>
      <div class='flex items-center justify-start'>
        <label
          for='email'
          class='block text-base font-medium leading-6 text-gray-900'
        >&ThickSpace;Email</label>
      </div>
      <div class='mt-2'>
        <input
          id='email'
          name='email'
          type='email'
          autocomplete='email'
          class='block w-full rounded-md border-0 py-1.5 px-3 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-info-main sm:text-sm sm:leading-6'
        />
      </div>
    </div>
    <div>
      <div class='flex items-center justify-between'>
        <label
          for='password'
          class='block text-base font-medium leading-6 text-gray-900'
        >&ThickSpace;Password</label>
        <div class='text-sm'>
          <a
            href='#'
            class='font-semibold underline decoration-2 hover:underline-offset-2 text-info-main hover:text-info-hover'
          >Forgot password?</a>
        </div>
      </div>
      <div class='mt-2'>
        <input
          id='password'
          name='password'
          type='password'
          autocomplete='current-password'
          class='block w-full rounded-md border-0 py-1.5 px-3 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-info-main sm:text-sm sm:leading-6'
        />
      </div>
    </div>
    <div>
      <button
        type='submit'
        class='w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-info-main hover:bg-info-hover focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-info-main'
      >Sign Up</button>
    </div>
  </form>
  <p class='mt-10 text-center text-sm text-gray-500'>
    Already have an account?
    <a
      href='/login'
      class='font-semibold leading-6 underline decoration-2 hover:underline-offset-2 text-info-main hover:text-info-hover'
    >Login Right here!</a>
  </p>
  <script src='/js/sign-up.js'></script>
</main>